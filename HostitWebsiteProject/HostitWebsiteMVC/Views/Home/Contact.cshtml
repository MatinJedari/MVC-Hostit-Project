@model ContactMessage

<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Get In Touch
            </h2>
        </div>

        @if (!string.IsNullOrWhiteSpace(ViewBag.success))
        {
            <div class="alert alert-dismissible alert-success">             
                <strong>Well done!</strong> @ViewBag.success
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ViewBag.error))
        {
            <div class="alert alert-dismissible alert-danger">
                <strong>Oh snap!</strong> @ViewBag.error
            </div>
        }

        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto">
                <div class="form_container">
                    <form method="post" asp-action="Contact">
                        <div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input type="text" placeholder="Your Name(Required)" asp-for="Name"/>
                            
                        </div>
                        <div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input type="email" placeholder="Your Email(Required)" asp-for="Email" />
                            
                        </div>
                        <div>
                            <input type="text" placeholder="Your Phone" asp-for="Phone"/> 
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-4">Select your service: </label>
                            <select class="form-select" asp-for="Service" asp-items="Model.ServicePrice">
                                <option value="0" selected="selected">Please select the service you have purchased ...</option>
                            </select>
                        </div>
                        <div>
                            <span asp-validation-for="Message" class="text-danger"></span>
                            <input type="text" class="message-box" placeholder="Message(Required)" asp-for="Message" />
                            
                        </div>
                        <div class="btn_box ">
                            <button>
                                SEND
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
