@model List<Price>


<section class="price_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Pricing
            </h2>
        </div>
        <div class="price_container ">

            @foreach(var service in Model)
            {
                <div class="box">
                    <div class="detail-box">
                        <h2>$ <span>@service.ServicePrice</span></h2>
                        <h6>
                            @service.ServiceName
                        </h6>
                        <ul class="price_features">
                            <li>
                                @service.RAM RAM
                            </li>
                            <li>
                                @service.CloudStorage SSD Cloud Storage
                            </li>
                            <li>
                                Weekly Backups
                            </li>
                            <li>
                                @service.SecurityServices
                            </li>
                            <li>
                                Full Root Access
                            </li>
                            <li>
                                24/7/365 Tech Support
                            </li>
                        </ul>
                    </div>
                    <div class="btn-box">
                        <a href="">
                            See Detail
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

